<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="340.0" prefWidth="350.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calcolatrice.operazioni.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="CALCOLATRICE" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Numero 1:" />
                  <TextField fx:id="numberOneTextField" />
               </children>
            </VBox>
            <Label fx:id="signLabel" alignment="CENTER" text="+" textAlignment="CENTER">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </Label>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Numero 2:" />
                  <TextField fx:id="numberTwoTextField" />
               </children>
            </VBox>
         </children>
      </HBox>
      <Label fx:id="welcomeText" text="seleziona operazione" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onPlusButtonClick" text="+">
               <HBox.margin>
                  <Insets right="40.0" />
               </HBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#onMinusButtonClick" text="-" />
         </children></HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onPersButtonClick" text="*">
               <HBox.margin>
                  <Insets right="40.0" />
               </HBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#onDivisButtonClick" text="/" />
         </children></HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" />
      <Label text="risultato:" />
      <Label fx:id="resultLabel" text="0" />
   </children>
</VBox>
